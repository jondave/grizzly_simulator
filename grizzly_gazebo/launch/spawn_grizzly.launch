<launch>

  <arg name="robot_namespace" default="/"/>

  <arg name="x" default="0.0"/>
  <arg name="y" default="0.0"/>
  <arg name="yaw" default="0.0"/>

  <arg name="urdf_extras" default="$(optenv GRIZZLY_URDF_EXTRAS)"/>

  <group ns="$(arg robot_namespace)">

    <include file="$(find grizzly_control)/launch/control.launch" />

    <!-- added code for joy teleop -->
    <include file="$(find grizzly_control)/launch/teleop.launch"/>
    <!-- added code for joy teleop -->

    <!-- code added if Veleodyne VLP16 lidar enabled-->
    <group if="$(optenv GRIZZLY_HDL32_ENABLED 0)">
      <include file="$(find grizzly_navigation)/launch/vlp16_pointcloud_to_laserscan.launch" />
    </group>
    <!-- code added if Veleodyne VLP16 lidar enabled-->

    <!-- Spawn robot in gazebo -->
    <node name="spawn_grizzly_model" pkg="gazebo_ros" type="spawn_model"
        args="-x $(arg x)
              -y $(arg y)
              -Y $(arg yaw)
              -unpause
              -urdf
              -param robot_description
              -model $(arg robot_namespace)" />

  </group>

</launch>
